@using Day2.viewsModel
@model InstractorDeplistVM
<form method="post" action="/GetData/Edit/@Model.Id">
    <div>
        <label>Name</label>
        <input type="Text" name="Name" value="@Model.Name" class="form-control" />
    </div>
  
    <div>
        <label>Adderss</label>
        <input type="Text" name="Address" value="@Model.Address" class="form-control" />
    </div>
    <div>
        <label>CourseID</label>
        <input type="Text" name="CourseID" value="@Model.CourseID" class="form-control" />
    </div>

    <div>
        <label>Img</label>
        <input type="file" name="Imageurl" class="form-control" />
    </div>

    <div>
        <label>DepartmentId</label>

        <select name="DepartmentID" class="form-control">
            @foreach (DepartmentVm itme in Model.DepartmentVm)
            {
                @if (itme.id == Model.DepartmentID)
                {
                    <option value="@itme.id" selected>@itme.name</option>
                }else{
                <option value="@itme.id">@itme.name</option>
                }
            }
        </select>
    </div>
    <input type="submit" value="Save" class="btn btn-outline-primary" />
</form>
<a href="/GetData/GetallInstructor" class="btn btn-dark">Bake to list</a>